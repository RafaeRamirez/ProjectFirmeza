@using Microsoft.AspNetCore.Identity
@inject SignInManager<Firmeza.Web.Models.AppUser> SignInManager

<!doctype html>
<html lang="es">
<head>
<meta charset="utf-8" /><meta name="viewport" content="width=device-width, initial-scale=1" />
<title>@(ViewData["Title"] ?? "Firmeza")</title>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<div class="app-shell">
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container app-container">
    <a class="navbar-brand" asp-controller="Home" asp-action="Index">Firmeza</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav"><span class="navbar-toggler-icon"></span></button>
    <div class="collapse navbar-collapse" id="nav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index">Panel</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Chat" asp-action="Index">Chatbot</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Catalog">Cat√°logo</a></li>
            @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
            {
                <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Productos</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Customers" asp-action="Index">Clientes</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Sales" asp-action="Index">Ventas</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="ProductRequests" asp-action="Index">Solicitudes</a></li>
            }
            @if (User.IsInRole("SuperAdmin"))
            {
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Users">Usuarios</a></li>
            }
        }
      </ul>
      <ul class="navbar-nav align-items-center">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item me-3">
                <a class="nav-link position-relative" asp-controller="Notifications" asp-action="Index">
                    <i class="bi bi-bell"></i>
                </a>
            </li>
            <li class="nav-item"><span class="navbar-text me-2">Hola, @(User?.Identity?.Name ?? "usuario")</span></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Salir</a></li>
        }
        else
        {
            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Entrar</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Registro</a></li>
        }
      </ul>
    </div>
  </div>
</nav>
<main class="app-main">
  <div class="container app-container">
    @RenderBody()
  </div>
</main>
<footer class="app-footer text-center">
    &copy; @DateTime.Now.Year Firmeza. Todos los derechos reservados.
</footer>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body></html>
