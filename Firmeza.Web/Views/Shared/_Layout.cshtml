<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - Firmeza</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" asp-controller="Home" asp-action="Index">Firmeza</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="mainNav" class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Products</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Chat" asp-action="Index">Assistant (AI)</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="HealthDb">DB Health</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <main class="container py-4">
    @RenderBody()
  </main>
  <footer class="border-top text-center text-muted py-3">
    <div class="container"><small>© @DateTime.Now.Year Firmeza</small></div>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
