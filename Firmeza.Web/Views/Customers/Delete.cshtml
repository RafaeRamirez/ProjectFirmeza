@model Firmeza.Web.Models.Customer
@{
    ViewData["Title"] = "Eliminar cliente";
}

<h2>Eliminar cliente</h2>
<h3>¿Está seguro que desea eliminar este cliente?</h3>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
