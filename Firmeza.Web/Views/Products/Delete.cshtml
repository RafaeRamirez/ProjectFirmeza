@model Firmeza.Web.Models.Product
@{
    ViewData["Title"] = "Eliminar producto";
}

<h2>Eliminar producto</h2>
<h3>¿Está seguro que desea eliminar este producto?</h3>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.UnitPrice.ToString("0.00")</dd>
        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>
        <dt class="col-sm-2">Activo</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Sí" : "No")</dd>
    </dl>
    
    <form asp-action="Delete" method="post" class="d-flex gap-2">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" name="force" value="false" class="btn btn-danger">Eliminar</button>
        <button type="submit" name="force" value="true" class="btn btn-warning"
                onclick="return confirm('Esta acción eliminará también las ventas relacionadas. ¿Desea continuar?');">
            Eliminar definitivamente
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
