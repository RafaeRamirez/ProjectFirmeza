@model IEnumerable<Firmeza.WebApplication.Models.Product>

<h1>Products</h1>

<form method="get">
  <input type="text" name="q" placeholder="Search..." value="@Context.Request.Query["q"]" />
  <button type="submit">Search</button>
</form>

<table>
  <thead><tr><th>Name</th><th>Price</th><th>Active</th></tr></thead>
  <tbody>
  @foreach (var p in Model)
  {
    <tr><td>@p.Name</td><td>@p.UnitPrice</td><td>@p.IsActive</td></tr>
  }
  </tbody>
</table>

<h2>Add product</h2>
<form method="post" asp-action="Create">
  <input name="name" placeholder="Name" required />
  <input name="unitPrice" type="number" step="0.01" placeholder="Price" required />
  <button type="submit">Add</button>
</form>
