@model IEnumerable<Firmeza.Web.Models.Product>
@{
    ViewData["Title"] = "Catálogo";
    var canRequest = User?.Identity?.IsAuthenticated ?? false;
}
<section class="glass-panel p-4 mb-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
        <div>
            <span class="pill-badge"><i class="bi bi-bag"></i> Catálogo disponible</span>
            <h2 class="hero-heading mt-3">Explora los productos activos</h2>
            <p class="text-muted mb-0">Estos productos están listos para que nuestro equipo los facture por ti.</p>
        </div>
    </div>
</section>

@if (TempData["CatalogMessage"] is string alert && !string.IsNullOrWhiteSpace(alert))
{
    <div class="alert alert-info">@alert</div>
}

@if (!Model.Any())
{
    <div class="glass-panel p-4 text-center">
        <p class="text-muted mb-0">Aún no hay productos publicados. Vuelve pronto o contacta a soporte.</p>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-12 col-md-6 col-xl-4">
                <div class="glass-panel p-4 h-100 d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start">
                        <h5 class="fw-semibold mb-2">@product.Name</h5>
                        <span class="badge bg-success">Disponible</span>
                    </div>
                    <p class="text-muted flex-grow-1">Precio unitario</p>
                    <div class="fs-4 fw-bold">@product.UnitPrice.ToString("C")</div>
                    @if (canRequest)
                    {
                        <form asp-controller="Products" asp-action="Request" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ProductId" value="@product.Id" />
                        <div class="d-flex align-items-center gap-2">
                            <label for="qty-@product.Id" class="text-muted mb-0">Cantidad</label>
                            <input type="number" id="qty-@product.Id" name="Quantity" class="form-control form-control-sm" min="1" max="@product.Stock" value="1" required />
                        </div>
                        <textarea name="Note" class="form-control form-control-sm mt-2" rows="2" placeholder="Notas (opcional)"></textarea>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <small class="text-muted">Stock: @product.Stock</small>
                            <button class="btn btn-sm btn-primary" type="submit">Solicitar</button>
                        </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-secondary mt-3" role="alert">
                            Inicia sesión para solicitar este producto.
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
