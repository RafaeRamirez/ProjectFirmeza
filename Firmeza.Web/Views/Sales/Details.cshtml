@model Firmeza.Web.Models.Sale
@{
    ViewData["Title"] = "Detalle de venta";
    // Build safe URL for the receipt (avoid @Model.Id.pdf parse issue)
    var receiptUrl = Url.Content($"~/receipts/recibo_{Model.Id}.pdf");
}

<h2>Detalle de venta</h2>
<p><strong>Fecha:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th><th>Producto</th><th>Cant.</th><th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model.Items[i].Product?.Name</td>
                <td>@Model.Items[i].Quantity</td>
                <td>@Model.Items[i].Subtotal.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>

<p class="text-end"><strong>Total:</strong> @Model.Total.ToString("0.00")</p>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
    <a class="btn btn-outline-primary" target="_blank" href="@receiptUrl">Descargar recibo PDF</a>
</div>
