@model IEnumerable<Firmeza.Web.Models.Sale>
@{ ViewData["Title"]="Ventas"; }
<div class="d-flex justify-content-between align-items-center mb-3"><h2>Ventas</h2><a class="btn btn-success" asp-action="Create">Registrar venta</a></div>
<table class="table table-striped"><thead><tr><th>Fecha</th><th>Cliente</th><th>Total</th><th></th></tr></thead><tbody>
@foreach(var s in Model){<tr><td>@s.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td><td>@s.Customer?.FullName</td><td>@s.Total.ToString("0.00")</td>
<td class="text-end"><a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@s.Id">Detalles</a></td></tr>} </tbody></table>
