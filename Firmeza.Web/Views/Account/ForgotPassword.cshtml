@model Firmeza.Web.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}
<div class="container mt-5" style="max-width:480px;">
  <div class="card p-4">
    <h2 class="mb-3 text-center">¿Olvidaste tu contraseña?</h2>
    <p class="text-muted">Ingresa tu correo y te enviaremos un enlace para restablecerla.</p>
    <form asp-action="ForgotPassword" method="post">
      @Html.AntiForgeryToken()
      <div class="mb-3">
        <label asp-for="Email" class="form-label">Correo</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>
      <button class="btn btn-primary w-100">Enviar enlace</button>
      <div class="text-center mt-3">
        <a asp-action="Login">Volver al inicio de sesión</a>
      </div>
    </form>
  </div>
</div>
@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
