@model IEnumerable<Firmeza.Web.Models.ViewModels.AdminUserListItemViewModel>
@{ ViewData["Title"]="Usuarios"; }
<h2>Usuarios</h2>
<table class="table table-striped"><thead><tr><th>Correo</th><th>Roles</th><th class="text-end">Acciones</th></tr></thead><tbody>
@foreach(var u in Model){ <tr><td>@u.Email</td><td>@(u.Roles.Any()?string.Join(", ",u.Roles):"Sin roles")</td><td class="text-end d-flex gap-2 justify-content-end"><a class="btn btn-sm btn-outline-primary" asp-action="EditRoles" asp-route-id="@u.UserId">Roles</a><a class="btn btn-sm btn-outline-light" asp-action="Edit" asp-route-id="@u.UserId">Editar</a><a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@u.UserId">Eliminar</a></td></tr> }
</tbody></table>
