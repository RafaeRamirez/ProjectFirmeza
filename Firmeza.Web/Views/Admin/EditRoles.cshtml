@model Firmeza.Web.Models.ViewModels.EditRolesViewModel
@{ ViewData["Title"]="Editar roles"; }
<h2>Editar roles para @Model.Email</h2>
<form asp-action="EditRoles" method="post" class="d-grid gap-2">
@Html.AntiForgeryToken()
<input type="hidden" asp-for="UserId"/>
<div class="card p-3">
@for(int i=0;i<Model.Roles.Count;i++){ var role=Model.Roles[i]; var isChecked=Model.Assigned.Contains(role);
<div class="form-check"><input class="form-check-input" type="checkbox" name="Assigned" value="@role" @(isChecked? "checked" : "") /><label class="form-check-label">@role</label></div>}
</div>
<div><button class="btn btn-primary">Guardar</button> <a class="btn btn-secondary" asp-action="Users">Volver</a></div>
</form>
